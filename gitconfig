[include]
  path = ~/.git_userdetails	

[push]
  default = simple

##########
# Colors #
##########
[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
  whitespace = red reverse

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  excludesfile = ~/.gitignore_global
  autocrlf = input

#######

[alias]
  dc = diff --cached
  lg = log -p
  ls = ls-files

  # Show files ignored by git:
  ign = ls-files -o -i --exclude-standard
